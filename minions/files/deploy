#!/bin/bash
#
# Generated by minions-formula

set -euo pipefail

case ${1-} in
    find-file-roots)
        miniondir={{ deploy_root }}
        echo 'file_roots:'
        for envdir in $(echo ${miniondir}/file_roots/*/) ; do
            echo "  $(basename ${envdir}):"
            echo ${envdir}/*/ | sed 's,^,    - ,'
        done
    ;;
    *)
        exec salt-call --config-dir={{ config_dir }} $@
        ;;
esac
